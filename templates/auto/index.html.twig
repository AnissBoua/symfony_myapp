{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Post list :</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Modele</th>
                <th>Puissance</th>
                <th>prix</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for auto in autos %}
            <tr>
                <td>{{auto.id}}</td>
                <td>{{auto.marque}}</td>
                <td>{{auto.modele}}</td>
                <td>{{auto.puissance}} CH</td>
                <td>{{auto.prix}} €</td>
                <td><img style="width: 5em;" src="{{ asset('' ~ auto.image)}}" alt=""></td>
                <td>
                    <a href="{{asset('/auto/' ~ auto.id)}}" class="btn btn-info"><i class="fas fa-pen"></i>Détail</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>

    </table>
</div>
{% endblock %}