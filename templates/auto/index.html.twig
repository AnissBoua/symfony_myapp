{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    {{ dump(app.session.get('cars')) }}
<div class="example-wrapper">
    <h1>Post list :</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Modele</th>
                <th>Puissance</th>
                <th>prix</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for auto in autos %}
            <tr>
                <td>{{auto.id}}</td>
                <td>{{auto.marque}}</td>
                <td>{{auto.modele}}</td>
                <td>{{auto.puissance}} CH</td>
                <td>{{auto.prix}} €</td>
                <td><img style="width: 5em;" src="{{ asset('img/' ~ auto.image)}}" alt=""></td>
                <td>
                    <a href="{{path('auto_item',{id:auto.id})}}" class="btn btn-info"><i
                            class="fas fa-pen"></i>Détail</a>
                </td>
                <td>
                    <a href="{{path('auto_update',{id:auto.id})}}" class="btn btn-warning"><i
                            class="fas fa-pen"></i>Edit</a>
                </td>
                <td>
                    <a onclick="return confirm('Are you sure you want to delete this car ?')"
                        href="{{path('auto_delete',{id:auto.id})}}" class="btn btn-danger"><i
                            class="fas fa-pen"></i>Delete</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>

    </table>

</div>
<div class="paginator">{{ knp_pagination_render(autos) }}</div>
{% endblock %}