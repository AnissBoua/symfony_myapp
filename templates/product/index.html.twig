{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<section class="post_section">
{% for post in posts %}
      <div class="post_card">
        <img class="post_img" src="img/{{post.image}}" alt="{{post.image}}" />
        <div class="post_info">
          <h3 class="post_title">{{post.title}} </h3>
          <p class="post_desc">{{post.description}} </p>
          <p class="post_date">{{post.date_parution}} </p>
        </div>
      </div>
{% endfor %}
</section>

{% endblock %}
