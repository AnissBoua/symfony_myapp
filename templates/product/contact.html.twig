{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<section class="contact_section">
    <form class="contact_form" method="POST" action="contact">
      <div class="contact_inp">
        <label for="email">E-mail:</label>
        <input type="email" name="email" id="email" />
      </div>
      <div class="contact_inp">
        <label for="text">Object:</label>
        <input type="text" name="text" id="text" />
      </div>

      <textarea
        class="contact_inp"
        name="comment"
        id="comment"
        cols="30"
        rows="10"
      ></textarea>
      <input class="contact_inp_sub" type="submit" value="submit" />
    </form>
    <div>
      <h5>Our contact information:</h5>
      <p>E-mail: jenesaitpas@hotmail.com</p>
      <p>Telephone: 01 02 03 04 05</p>
      <p>Adresse: 1 je ne sait pas 75000 Paris</p>
    </div>
</section>
{% endblock %}